# TND SYSTEM - ENVIRONMENT CONFIGURATION
# Copy this file to .env and fill with your actual values
# NEVER commit .env to git!

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
DB_HOST=localhost
DB_NAME=tnd_system
DB_USERNAME=your_db_username
DB_PASSWORD=your_strong_password_here
DB_CHARSET=utf8mb4
DB_PORT=3306

# ==========================================
# APPLICATION CONFIGURATION
# ==========================================
APP_NAME="TND System"
APP_VERSION=1.0.0
APP_ENV=production
# production / staging / development
APP_DEBUG=false
# true untuk development, false untuk production

# Base URL aplikasi Anda (tanpa trailing slash)
APP_URL=https://yourdomain.com

# ==========================================
# SECURITY CONFIGURATION
# ==========================================
# JWT Secret Key - GENERATE RANDOM 256-bit KEY!
# Generate dengan: openssl rand -base64 32
JWT_SECRET_KEY=CHANGE_THIS_TO_RANDOM_256BIT_KEY

# Session Secret
SESSION_SECRET=CHANGE_THIS_TO_RANDOM_KEY

# ==========================================
# TIMEZONE
# ==========================================
APP_TIMEZONE=Asia/Jakarta

# ==========================================
# CORS CONFIGURATION
# ==========================================
# Comma-separated allowed origins
# Example: https://app.yourdomain.com,https://admin.yourdomain.com
CORS_ALLOWED_ORIGINS=https://yourdomain.com

# ==========================================
# FILE UPLOAD CONFIGURATION
# ==========================================
MAX_UPLOAD_SIZE=10485760
# 10MB = 10 * 1024 * 1024 bytes

ALLOWED_IMAGE_TYPES=jpg,jpeg,png
ALLOWED_DOCUMENT_TYPES=pdf,doc,docx

# ==========================================
# STORAGE CONFIGURATION
# ==========================================
STORAGE_TYPE=local
# local or cloudinary

# Cloudinary (Optional - if using cloud storage)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_ENABLED=true
LOGIN_MAX_ATTEMPTS=5
LOGIN_LOCKOUT_TIME=900
# 900 seconds = 15 minutes

API_RATE_LIMIT=100
# requests per minute per user

# ==========================================
# EMAIL CONFIGURATION (Optional)
# ==========================================
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME="TND System"

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=error
# debug / info / warning / error

LOG_FILE=logs/app.log
ERROR_LOG_FILE=logs/error.log

# ==========================================
# BACKUP CONFIGURATION
# ==========================================
BACKUP_ENABLED=true
BACKUP_PATH=/backups
BACKUP_RETENTION_DAYS=30
